{% extends 'base.html.twig' %}

{% block title %}Hola Mundo{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
{% endblock %}

{% block body %}

    <h1 class="text-styled text-center">Hola a Peru</h1>

    {# {{ form(form) }} #}

    <h1 class="text-center">Formulario</h1>

    <div class="card p-4 mx-auto ancho_formulario">
        {{ form_start(form) }}

            {{ form_label(form.nombre) }}
            {{ form_widget(form.nombre , {'attr' : {'class':'form-control'}}) }}

            {{ form_label(form.apellidos) }}
            {{ form_widget(form.apellidos , {'attr' : {'class':'form-control'}}) }}

            {{ form_label(form.edad) }}
            {{ form_widget(form.edad , {'attr' : {'class':'form-control'}}) }}

            {{ form_label(form.telefono) }}
            {{ form_widget(form.telefono , {'attr' : {'class':'form-control'}}) }}

            {{ form_widget(form.foto , {'attr' : {'class':'form-control mt-3'}})}}

            {{ form_row(form.Save, {'attr':{'class':'btn btn-primary w-100 mt-3'}}) }}

        {{ form_end(form) }}

    </div>
    <div class="container mt-4">
        <table class="table">
            <thead>
                <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Apellidos</th>
                <th scope="col">Edad</th>
                <th scope="col">Telefono</th>
                <th scope="col">Foto</th>
                </tr>
            </thead>
            <tbody>
                {% for alumno in listado_alumnos %}
                    <tr>
                        <td>{{ alumno.nombre }}</td>
                        <td>{{ alumno.apellidos }}</td>
                        <td>{{ alumno.edad }}</td>
                        <td>{{ alumno.telefono }}</td>
                        <td>
                            <img src="{{ asset('img/' ~ alumno.foto)}}" alt="Foto alumno" class="tamanio_imagen_foto">
                        </td>
                    </tr>  
                {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}
